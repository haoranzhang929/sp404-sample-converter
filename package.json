{
  "name": "sp404-sample-converter",
  "version": "0.0.0",
  "description": "",
  "main": "src/main.js",
  "scripts": {
    "start": "npm run build:css && electron .",
    "pack": "npm run build:css && electron-builder --dir",
    "dist": "npm run build:css && electron-builder",
    "build:css": "tailwindcss -i src/tailwind.css -o src/styles.css"
  },
  "build": {
    "appId": "com.haosc.sp404-sample-converter",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json",
      "!src/**/*.test.js",
      "!**/*.md",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/*.map",
      "!src/tailwind.css",
      "!src/tailwind.config.js",
      "!src/postcss.config.js"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [],
  "author": "HAÃ˜SC",
  "license": "MIT",
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.6"
  }
}
